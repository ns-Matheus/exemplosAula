@import url('https://fonts.googleapis.com/css2?family=Concert+One&family=Fredoka+One&family=Hubballi&display=swap');

:root {
    --bgBranco: rgb(255, 255, 255, 0.8);
    --bgPreto: rgb(0.0, 0.0, 0.0, 0.8);
}
/* SCROLLBAR */
::-webkit-scrollbar {
	width: 8px;
	height: 8px;
}

::-webkit-scrollbar-track {
	background: #0000;
}

::-webkit-scrollbar-thumb {
	background: #aaa;
	border-radius: 0.25rem;
	transition: opacity 0.2s linear;
}

* {
	scrollbar-width: thin;
	scrollbar-color: #aaa #0000;
	user-select: none;
	box-sizing: border-box;
}

body {
    font-family: 'Fredoka One', cursive;
    font-size: 18px;
    font-weight: 500;
}

/* NAVBAR */
.navbar {
    width: 80%;
    height: 80px;
    position: fixed;
    top: 20px;
    left: 10%;
    border-radius: 35px;
    -webkit-border-radius: 35px;
    -moz-border-radius: 35px;
    -webkit-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
    box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
}

.navbar-brand img {
    float: left;
    max-width: 200px;
    min-width: 80px;
}

#navbarNavDropdown {
    float: right;
}

.nav-link {
    background-color: var(--bgBranco);
}

.navbar-nav {
    background-color: var(--bgBranco);
    border-radius: 10px !important;
}

.nav-link {
    background-color: transparent;
}

.nav-link:hover {
    animation: hover 1s ease-in-out infinite;
}

@keyframes hover {
    0% {
        transform: perspective(200px) translatez(0);
    }

    50% {
        transform: perspective(200px) translatez(5px);
    }

    100% {
        transform: perspective(200px) translatez(0);
    }
}


/* CORPO SITE */
.back_monkey {
    background-image: url('https://media.discordapp.net/attachments/918143224420376608/1030124271965569174/unknown.png');
    background-position: center;
    background-size: cover;
    height: 100%;
    position: fixed;
    display: block;
    top: 0;
    left: 0;
    text-align: center;
}

.corpo_monkey {
    position: absolute;
    right: 0;
}

.logo_img {
    width: 100%;
    top: 10%;
}

.card-header{
    font-size: 40px;
    font-weight: 700;
}

.card-body iframe{
    width: 80%;
    height: 500px;
}

.card-footer th{
    font-family: 'Hubballi', cursive;
    font-size: 20px;
    font-weight: 600;
}

/* ESCOPO  */
.escopogeral{
    width: 100%;
}

.escopo {
    
    font-size: 50px;
    font-weight: bold;
}

.escopo1 {
    height: 1vh;
    display: flex;
    justify-content: start;
    align-items: start;
}

.escopo1 p {
    font-size: 1.2rem;
    padding: 0.5rem;
    font-weight: bold;
    letter-spacing: 0.1rem;
    text-align: center;
    overflow: hidden;
}

.escopo1 p span.typed-text {
    font-weight: normal;
    color: #525151;
}

.escopo1 p span.cursor {
    display: inline-block;
    background-color: #ccc;
    margin-left: 0.1rem;
    width: 3px;
    animation: typing 1s infinite;
}

.escopo1 p span.cursor.typing {
    animation: none;
}

@keyframes typing {
    0% {
        background-color: #ccc;
    }

    49% {
        background-color: #ccc;
    }

    50% {
        background-color: transparent;
    }

    99% {
        background-color: transparent;
    }

    100% {
        background-color: #ccc;
    }
}


.escopo2 {
    font-size: 18px;
    font-weight: 100;
}

.escopo3 {
    font-family: "Poppins";
    font-size: 22px;
    font-weight: 700;
}

.escopo4 a {
    align-items: center;
    appearance: none;
    background-color: #FCFCFD;
    border-radius: 4px;
    border-width: 0;
    box-shadow: rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
    box-sizing: border-box;
    color: #292c49;
    cursor: pointer;
    display: inline-flex;
    font-family: "JetBrains Mono", monospace;
    height: 48px;
    justify-content: center;
    line-height: 1;
    list-style: none;
    overflow: hidden;
    padding-left: 16px;
    padding-right: 16px;
    position: relative;
    text-align: left;
    text-decoration: none;
    transition: box-shadow .15s, transform .15s;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
    white-space: nowrap;
    will-change: box-shadow, transform;
    font-size: 20px;
}

.escopo4 a:focus {
    box-shadow: #D6D6E7 0 0 0 1.5px inset, rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
}

.escopo4 a:hover {
    box-shadow: rgba(45, 35, 66, 0.4) 0 4px 8px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
    transform: translateY(-2px);
}

.escopo4 a:active {
    box-shadow: #D6D6E7 0 3px 7px inset;
    transform: translateY(2px);
}



/* INDEX */
.sobre{
    background-color: var(--bgBranco);
    color: var(--bgPreto);
}

.sobre h1{
    text-align: center;
}

.sobre strong{
    font-weight: 900;
}




/* AREA PROGRAMADOR */

.docGeral{
    width: 100%;
}

.doc {
    border: 1px solid #ddd;
    margin: 5px;
}

.doc_titulo {
    margin: 5px 2px;
    font-size: 18px;
    font-weight: bold;
}

.code {
    margin: 5px 2px;
    padding: 5px;

    background-color: #ddd;
    border: 1px solid #ccc;
}









/* FOOTER */

.footer ul
{
    position: relative;
    margin: 0;
    padding: 0;
    display: flex;
}
.footer ul li 
{
    position: relative;
    list-style: none;
    width: 60px;
    height: 60px;
    margin: 0 30px;
    transform: rotate(-30deg) skew(25deg);
}
.footer ul li span
{
    position: absolute;
    top: 0;
    left: 0;
    width: 70%;
    height: 70%;
    background: #000;
    transition: 0.5s;
    display: flex !important;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 30px !important;
}
.footer ul li:hover span
{
    box-shadow: -1px 1px 1px rgba(0,0,0,.1);
}
.footer ul li:hover span:nth-child(5)
{
    transform: translate(40px, -40px);
    opacity: 1;
}
.footer ul li:hover span:nth-child(4)
{
    transform: translate(30px, -30px);
    opacity: 0.8;
}
.footer ul li:hover span:nth-child(3)
{
    transform: translate(20px, -20px);
    opacity: 0.6;
}
.footer ul li:hover span:nth-child(2)
{
    transform: translate(10px, -10px);
    opacity: 0.4;
}
.footer ul li:hover span:nth-child(1)
{
    transform: translate(0,0);
    opacity: .2;
}
.footer ul li:nth-child(1) span
{
    background: #3b5999;
}
.footer ul li:nth-child(2) span
{
    background: #e4405f;
}





/* RESPONSIVOS */

@media (max-width: 768px) {
    .back_monkey {
        position: absolute;
        height: 100%;
    }

    .corpo_monkey {
        top: 100%;
        left: 0%;
    }

    .navbar {
        font-size: 13px;
        font-weight: 700;
    } 

}

@media (max-width: 992px) {
    .nav-link {
        text-align: center;
    }

    .nav-link:hover {
        color: var(--bgBranco);
        background-color: var(--bgPreto);
    }
    .card{
        overflow: hidden;
    }
    
}